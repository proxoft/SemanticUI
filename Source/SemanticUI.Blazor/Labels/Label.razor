@inherits LabelBase
@namespace Proxoft.SemanticUI.Blazor

<DivTemplate Component="this" />

@code {
    [Parameter]
    public Position Attached { get; set; }

    [Parameter]
    public Position Pointing { get; set; }

    protected override IEnumerable<string> Classes()
    {
        return base.Classes()
            .Concat(this.ClassesPrivate());
    }

    private IEnumerable<string> ClassesPrivate()
    {
        yield return this.Attached.ToAttachedClass();
        yield return this.Pointing.ToPointingClass();
    }
}
