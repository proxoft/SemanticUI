@inherits ContainerSemanticComponent
@namespace Proxoft.SemanticUI.Blazor

<DivTemplate Component="this" />

@code {
    public Menu() : base("menu")
    {
    }

    [Parameter]
    public Orientation Orientation { get; set; } = Horizontal;

    [Parameter]
    public Position Alignment { get; set; } = Left;

    [Parameter]
    public MenuDecorations Decorations { get; set; }

    protected override IEnumerable<string> Classes()
    {
        yield return this.Orientation.ToClass();
        yield return this.Decorations.ToClass();
        yield return this.Alignment.ToAlignmentClass();
    }
}
