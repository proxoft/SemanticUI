@inherits MenuBase
@namespace Proxoft.SemanticUI.Blazor

<DivTemplate Component="this" />

@code {
    public Menu() : base(true)
    {
    }

    [Parameter]
    public Orientation Orientation { get; set; } = Horizontal;


    [Parameter]
    public Size Size { get; set; }


    protected override IEnumerable<string> Classes()
    {
        return base.Classes().Concat(new[] { this.Orientation.ToClass(), this.Size.ToClass() });
    }
}
