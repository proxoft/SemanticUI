@inherits ContainerSemanticComponent
@namespace Proxoft.SemanticUI.Blazor

<DivTemplate Component="this">
    <LeftChildContent>
        @if (!string.IsNullOrWhiteSpace(this.IconName))
        {
            <Icon Name="@IconName" />
        }
    </LeftChildContent>
</DivTemplate>

@code {
    public Step(): base("step", false)
    {
    }

    [Parameter]
    public string IconName { get; set; }

    [Parameter]
    public StepDecorations Decorations { get; set; }

    protected override IEnumerable<string> Classes()
    {
        yield return this.Decorations.ToClass();
    }
}
